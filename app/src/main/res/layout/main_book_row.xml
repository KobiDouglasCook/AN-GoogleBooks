<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:elevation ="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/book_image"
        android:layout_width="40dp"
        android:layout_height="65dp"
        android:background="@android:color/holo_blue_light"
        android:scaleType="centerCrop"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/book_main_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Random Book Title That Demonstrates the Longer Type of Text That I May Receive"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/book_image"
        app:layout_constraintTop_toTopOf="@id/book_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/book_sub_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop= "10dp"
        android:layout_marginStart= "10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        tools:text="This is a long book description that is going to be used on the production of the application to simulate a real world experience"
        android:textStyle="normal"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/book_image"
        app:layout_constraintTop_toBottomOf="@id/book_main_label"/>


</androidx.constraintlayout.widget.ConstraintLayout>
